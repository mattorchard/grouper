{
  "name": "Grouper",
  "short_name": "Grouper",
  "version": "0.0.5",
  "description": "Automate tab group creation",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["tabs", "storage", "tabGroups"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "group-tabs": {
      "suggested_key": "Ctrl+Q",
      "description": "Group tabs"
    },
    "ungroup-tabs": {
      "suggested_key": "Ctrl+Shift+Q",
      "description": "Ungroups tabs"
    }
  },
  "options_page": "options.html",
  "manifest_version": 3
}