{
  "name": "Grouper",
  "short_name": "Grouper",
  "version": "0.1.0",
  "description": "Automate tab group creation",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "tabGroups"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "group-tabs": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "MacCtrl+Q"
      },
      "description": "Group tabs"
    }
  },
  "options_page": "options.html",
  "manifest_version": 3
}